@model IEnumerable<GestionHospitalisation.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des Services</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LibServ)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LibServ)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumServ">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NumServ">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NumServ">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
